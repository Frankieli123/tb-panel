# Database (Remote)
DATABASE_URL="postgresql://postgres:<password>@110.42.105.188:5212/postgres"

# Redis (Remote)
REDIS_URL="redis://default:<password>@110.42.105.188:6896"

# Server
HOST=127.0.0.1
PORT=4000
NODE_ENV=development

# Timezone（影响“系统静默时间”等按本地时间计算的功能）
TZ=Asia/Shanghai

# API Key（可选，设置后所有 API 请求需要携带此密钥；前端也需要配置相同的密钥）
API_KEY=

# Agent（多机浏览器执行机）
# Agent 连接到中心后端时使用的鉴权 token（优先于 API_KEY）
AGENT_TOKEN=

# Agent Pairing (recommended)
# First-time start: use pairing code to redeem a long-lived token (one-time). You can pass via env or CLI `--pair <CODE>`.
AGENT_PAIR_CODE=
# Optional: override redeem endpoint (default derived from AGENT_WS_URL)
# AGENT_HTTP_REDEEM_URL=http://<server-ip>:4000/api/agents/redeem

# Agent 运行参数（每台执行机）
# 可不填：Agent 会自动生成一个稳定的 agentId，并写入本机持久化文件（默认 %ProgramData%\TaobaoAgent\agent.json）
AGENT_ID=
# 可选：展示名称（用于前端识别本机）
AGENT_NAME=
# 可选：覆盖 agentId 存储目录
TAOBAO_AGENT_HOME=
# 中心后端的 Agent WebSocket 地址（部署到服务器后，执行机必须配置）
# AGENT_WS_URL=ws://<server-ip>:4000/ws/agent

# CORS（同时作为企业微信“监控页面”跳转地址的默认来源：取第一个 origin）
CORS_ORIGINS=http://localhost:5180

# Cart Scraper
# 保持购物车窗口/页面常驻：不频繁开关页面（用户手动关掉时会自动重建）
CART_SCRAPER_KEEP_OPEN=true

# Email (SMTP)
SMTP_HOST=smtp.qq.com
SMTP_PORT=465
SMTP_USER=your_email@qq.com
SMTP_PASS=your_smtp_password
SMTP_FROM=your_email@qq.com

# WeChat（Server 酱 or 企业微信）
WECHAT_WEBHOOK_URL=

# WeCom App (WeChat Work / 企业微信应用消息)
WECOM_ENABLED=false
WECOM_CORP_ID=
WECOM_CORP_SECRET=
WECOM_AGENT_ID=1000003
WECOM_TOUSER=@all

# Scraper Settings
SCRAPER_MIN_INTERVAL_MS=60000
SCRAPER_MAX_INTERVAL_MS=180000
SCRAPER_PAGE_TIMEOUT_MS=30000
MAX_CONCURRENT_ACCOUNTS=3
